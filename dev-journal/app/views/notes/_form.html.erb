<%= form_with(model: note) do |form| %>
  <% if note.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% note.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :created, style: "display: block" %>
    <%= form.datetime_field :created %>
  </div>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.label :subject_id, style: "display: block" %>
    <%= form.select :subject_id, options_for_select(Subject.all.map{|s|[s.name, s.id]}) %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
