<%= render 'home/sidebar' %>

<p style="color: green"><%= notice %></p>
<% if current_user %>
  <div>
    <%= link_to "Edit this tag", edit_tag_path(@tag) %> |
    <%= link_to "Back to tags", tags_path %>

    <%= button_to "Destroy this tag", @tag, method: :delete %>
  </div>
<% end %>

<div class="page-title">
  <h2>Notes with tag 
      <span class="tag">
        <%= render @tag %>
      </span>
  </h2>
</div>

<div class="container-responsive-margin">
  <% @tag.notes.order(created: :desc).each do |note| %>
    <div class="note-container">
      <%= render note %>
      <% if current_user %>
        <%= link_to "Edit this note",
        edit_note_path(note),
        class: "btn btn-dark btn-sm nav-button" %>
      <% end %>
    </div>
  <% end %>
</div>

