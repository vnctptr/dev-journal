<p style="color: green"><%= notice %></p>

<div class="note-container">
<%= render @note %>
<div class="nav-buttons-container">
<% if current_user %>
    <%= link_to "Edit this note", edit_note_path(@note), class: "btn btn-dark btn-sm nav-button" %>
    <%= link_to "Destroy this note", @note, method: :delete, class: "btn btn-dark btn-sm nav-button" %>
<%end%>

<%= link_to "Back to notes", notes_path, class: "btn btn-dark btn-sm nav-button" %>
</div>
</div>